<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hasil"
    android:background="@drawable/background">
    <TextView
        android:id="@+id/selamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELAMAT"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nilaimu "
        app:layout_constraintTop_toBottomOf="@+id/selamat"
        android:id="@+id/nilai"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" adalah"
        app:layout_constraintLeft_toRightOf="@+id/nilai"
        app:layout_constraintTop_toBottomOf="@+id/selamat"
        android:id="@+id/hasil"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="waktu   "
        app:layout_constraintTop_toBottomOf="@+id/nilai"
        android:id="@+id/waktu"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" adalah"
        app:layout_constraintLeft_toRightOf="@+id/nilai"
        app:layout_constraintTop_toBottomOf="@+id/hasil"
        android:id="@+id/waktunya"/>

</android.support.constraint.ConstraintLayout>